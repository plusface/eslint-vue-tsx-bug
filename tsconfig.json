{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["./src/**/*.ts", "./src/**/*.d.ts", "./src/**/*.tsx", "./src/**/*.js", "./src/**/*.vue"],
  "exclude": ["vite.config.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "preserveValueImports": false,
    "importsNotUsedAsValues": "remove",
    "strictNullChecks": true,
    "noImplicitAny": true
  }
}
